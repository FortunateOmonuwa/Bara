{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Connection": ""
  },

  "Secrets": {
    "YouVerifyTestAPIKEY": "",
    "YouVerifyLiveAPIKEY": "",
    "YouVerifyWebhookSigningSecret": "",
    "CloudinaryAPISecret": "",
    "CloudinaryAPIKEY": "",
    "CloudinaryURL": "",
    "CloudinaryName": "",
    "CloudinaryFolderName": "",
    "JwtSickRit": "",
    "Issuers": [],
    "IpInfoKey": "",
    "RabbitMqHost": "",
    "RabbitMqPort": 5269,
    "RabbitMqUserName": "",
    "RabbitMqPassword": "",
    "SendGridApiKey": "",
    "PaystackSecret": "",
    "PaystackPublic": ""
  },

  "AppSettings": {
    "YouVerifyBaseUrl": "https://api.youverify.co",
    "YouVerify_BVN_VerificationUrl": "/v2/api/identity/ng/bvn",
    "YouVerify_Drivers_License_VerificationUrl": "/v2/api/identity/ng/drivers-license",
    "YouVerify_NIN_VerificationUrl": "/v2/api/identity/ng/nin",
    "YouVerify_International_Passport_VerificationUrl": "/v2/api/identity/ng/passport",

    "Sender": "support@barastories.com",
    "SenderName": "Bara",
    "SMTP_Sender": "",
    "SMTP_Server": "",
    "SMTP_Port": "587",
    "SMTP_Password": "",
    "SMTP_DisplayName": "",

    "AzureBlobStoragePath": "",
    "CloudinaryStoragePath": "",
    "CloudinaryBaseURL": "https://api.cloudinary.com/v1_1"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Enrich": [
      "WithThreadId",
      "WithThreadName",
      "WithProcessId",
      "WithProcessName",
      "WithEnvironmentName",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log.md",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Display.MessageTemplateTextFormatter, Serilog",
          "outputTemplate": "## [{Timestamp:yyyy-MM-dd HH:mm:ss}] **[{Level:u3}]**: {Message:lj}\n\n{Exception}\n---\n",
          "closingDelimiter": "\n",
          "renderMessage": true,
          "useSpaces": true,
          "applyAdditionalLevelPadding": true
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "ApplicationName": "Bara",
      "Environment": "Production"
    }
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      }
    ]
  },

  "IpRateLimitPolicies": {
    "IpRules": []
  },

  "AllowedOrigins": {
    "Origins": [
      "https://localhost:7131",
      "http://localhost:7131",
      "https://bara.vercel.app",
      "http://bara.vercel.app",
      "http://localhost:3000"
    ]
  }
}
